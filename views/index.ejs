							<ul class='hardcover_front'>
								<li>
									<div class="coverDesign blue">
										<h1>JS</h1>
										<p>FUNCTION</p>
									</div>
								</li>
								<li></li>
							</ul>

							<!-- Pages -->

							<ul class='page'>
								<li></li>
								<li>
									<a class="btn" href="#">Download</a>
								</li>
								<li></li>
								<li></li>
								<li></li>
							</ul>

							<!-- Back -->

							<ul class='hardcover_back'>
								<li></li>
								<li></li>
							</ul>
							<ul class='book_spine'>
								<li></li>
								<li></li>
							</ul>
							<figcaption>
								<h1>Storm JS</h1>
								<span>By Marco Barría for Codrops</span>
								
							</figcaption>
						</figure>
					</li>
					
					<li>
						<figure class='book'>

						<!-- Front -->

							<ul class='hardcover_front'>
