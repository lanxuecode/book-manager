	<body>
		<div class="container">
		    <div class="addbook">
			  <form action="/create" method="POST" enctype="multipart/form-data">
			    <fieldset>
	            <legend>添加新书</legend>
			    <section>
				  <label for="title">书名</label>
			      <input type="text" id="title" name="title" />
				</section>
			    <section>
				  <label for="author">作者</label>
			      <input type="text" id="author" name="author" />
				</section>
			    <section>
				  <label for="image">封面</label>
			      <input type="file" id="image" name="image" accept="image/*"  value="选择图片" placeholder="123"/>
				</section>
				<section>
				  <label for="desc">描述</label>
			      <textarea type="file" id="description" name="description"  placeholder="输入描述"></textarea>
				</section>
				<section>
				  <input type="submit" value="添加" />
				</section>
				</fieldest>
	          </form>
			</div>
			
